<view  bindtouchend="touchEnd">
  <map id='map' 
        longitude="{{longitude}}" 
        latitude="{{latitude}}" 
        scale="17"  
        markers="{{markers}}" 
        bindregionchange="regionchange"
        polygons="{{polygons}}"
        show-scale   
        show-location 
        enable-satellite
        style='width:100%;height:100vh;'>
  </map>

 <view class="page cover-input" >
