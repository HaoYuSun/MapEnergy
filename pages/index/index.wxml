<!--index.wxml-->
<view>
  <map id='map' 
        longitude="{{longitude}}" 
        latitude="{{latitude}}" 
        scale="17"  
        markers="{{markers}}" 
        bindregionchange="regionchange"
        polygons="{{polygons}}"
         
        show-location 
        enable-satellite
        style='width:100%;height:100vh;'>
    <cover-view slot="callout">
      <cover-view marker-id="{{customCalloutInfo.id}}" slot="callout" class="areainfo">
        <cover-view class="areainfo-body">
            <cover-view class="areainfo-body-cell">
              <cover-image class="areainfo-body-cell-img" src="../../images/infotag1.png"></cover-image>
              <cover-view class="areainfo-body-cell-info">
                <cover-view class="areainfo-body-cell-info-title">{{customCalloutInfo.info1}}</cover-view>
                <cover-view class="areainfo-body-cell-info-subtitle">总装机量(KW)</cover-view>
              </cover-view>
            </cover-view>
            <cover-view class="areainfo-body-cell body-cell-left">
              <cover-image class="areainfo-body-cell-img cell-img-left"  src="../../images/infotag2.png"></cover-image>
              <cover-view class="areainfo-body-cell-info">
                <cover-view class="areainfo-body-cell-info-title">{{customCalloutInfo.info2}}万</cover-view>
                <cover-view class="areainfo-body-cell-info-subtitle">总投资(元)</cover-view>
              </cover-view>
            </cover-view>
            <cover-view class="areainfo-body-cell body-cell-top">
              <cover-image class="areainfo-body-cell-img"  src="../../images/infotag3.png"></cover-image>
              <cover-view class="areainfo-body-cell-info">
                <cover-view class="areainfo-body-cell-info-title">{{customCalloutInfo.info3}}</cover-view>
                <cover-view class="areainfo-body-cell-info-subtitle">面积(㎡)</cover-view>
              </cover-view>
            </cover-view>
            <cover-view class="areainfo-body-cell body-cell-left body-cell-top">
              <cover-image class="areainfo-body-cell-img cell-img-left"  src="../../images/infotag4.png"></cover-image>
              <cover-view class="areainfo-body-cell-info">
                <cover-view class="areainfo-body-cell-info-title">{{customCalloutInfo.info4}}万</cover-view>
                <cover-view class="areainfo-body-cell-info-subtitle">年发电量(度)</cover-view>
              </cover-view>
            </cover-view>
            <cover-view class="areainfo-body-cell areainfo-body-cell-button">
              查看详情
            </cover-view>
            <cover-view class="areainfo-body-cell areainfo-body-cell-button areainfo-body-cell-width">
              去分享
            </cover-view>
        </cover-view>
        <cover-view class="areainfo-foot">
          <cover-image class="areainfo-foot-img" src="../../images/down.png"></cover-image>
        </cover-view>
      </cover-view>
    </cover-view>
    
  </map>

  

