<view class="body">
    <view style="padding-bottom:44px"  wx:if="{{type == 1 || type == 2}}">
        <view wx:for="{{list}}" wx:for-index="idx"  class="list-cell">
            <view class="cell-body-view">
                <view>{{item.file_name}}</view>
            </view>
            <view class="icon-box checkbox-view">
                <view class="icon-small-wrp">
                    <mp-icon icon="share" color="black" size="18"></mp-icon>   
                </view>
            </view>
            <view class="bg-tap-view"  data-index="{{idx}}" bindtap="cellTap">
            </view>
        </view>
    </view>
    <view style="padding-bottom:44px"  wx:if="{{type == 3}}">
        <view wx:for="{{list}}" wx:for-index="idx"  class="list-cell">
            <view class="cell-body-view">
                <view>{{item.file_name}}</view>
            </view>
            <view class="icon-box checkbox-view">
                <view class="icon-small-wrp">
                    <mp-icon icon="folder" color="black" size="18"></mp-icon>   
                </view>
            </view>
            <view wx:for="{{item.file_path}}"  wx:for-index="idx2"  class="list-cell2">
                <view class="cell-body-view2">
                    <view>文件{{idx2+1}}</view>
                </view>
                <view class="icon-box checkbox-view">
                    <view class="icon-small-wrp">
                        <mp-icon icon="photo-wall" color="black" size="18"></mp-icon>   
                    </view>
                </view>
                <view class="bg-tap-view" data-first="{{idx}}"  data-index="{{idx2}}" bindtap="cell2Tap"></view>
            </view>
            
        </view>
    </view>
    <view class="bot-view" wx:if="{{type == 1 || type == 2}}">
        <view class="bot-view-left-view"  bindtap="down">下载</view>
        <view class="bot-view-right-view" >咨询</view>
        <view class='contact-list'>
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
            <contact-button size='30'></contact-button>
            
